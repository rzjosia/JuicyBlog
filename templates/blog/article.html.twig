{% extends 'base.html.twig' %}

{% block body %}
    <section class="container">
        <article>
            <h1>{{ article.titre }}</h1>
            <p>Par <span>{{ article.auteur }}</span></p>
            <p>Publié le {{ article.datePublication|date('d/m/Y à H:i') }}</p>
            <p>{{ article.contenu }}</p>
        </article>
        <p class="align-right"><a href="{{ path('home') }}">Retour</a></p>
    </section>
{% endblock %}