<section class="container">
    <ul class="collection with-header">
        <li class="collection-header"><h4>Articles</h4></li>
        {% for article in articles %}
            <li class="collection-item">
                <div class="row">
                    <div class="col s12 m6">
                        <h5>{{ article.titre }}</h5>
                        <p>{{ article.auteur }}</p>
                    </div>
                    <div class="col s12 m6">
                        <a  href="{{ path('article', {slug: article.titre|slug}) }}" class="btn btn-primary secondary-content">Lire</a>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
</section>